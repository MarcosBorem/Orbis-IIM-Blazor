@page "/comecar"
@layout HeadlessLayout
@inherits RegisterPage

<PageTitle>Orbis - Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem>
        <MudPaper Class="mud-width-full pa-8" Style="width: auto; height: auto; border-radius: 15px;">
            <div class="d-flex justify-center pb-8 pt-8">
                <img src="imgs/orbis.png"
                     alt="Orbis - Orbis IIM"
                     width="150" />
            </div>

            <EditForm Model="@InputModel" OnValidSubmit="OnValidSubmitAsync">
                <DataAnnotationsValidator />

                <MudTextField T="string"
                              Label="E-mail"
                              InputType="InputType.Email"
                              Required="true"
                              Immediate="true"
                              For="@(() => InputModel.Email)"
                              @bind-Value="InputModel.Email"
                              Style="border-radius: 0px; padding: 5px; margin-bottom: 20px;" />

                <MudTextField T="string"
                              Label="Senha"
                              InputType="InputType.Password"
                              Required="true"
                              Immediate="true"
                              For="@(() => InputModel.Password)"
                              @bind-Value="InputModel.Password"
                              Style="border-radius: 0px; padding: 5px; margin-bottom: 20px;" />

                <div class="d-flex justify-center pb-8 pt-8">
                    @if (IsBusy)
                    {
                        <MudProgressCircular Color="Color.Info" Indeterminate="true"/>
                    }
                    else
                    {
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">CADASTRAR</MudButton>
                        <MudSpacer/>
                        <MudButton Href="/login">J√Å TENHO UMA CONTA</MudButton>
                    }
                </div>

            </EditForm>
        </MudPaper>
    </MudItem>
</MudGrid>